<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/j2ee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee
         http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
         version="2.4">
    <display-name>PropWare IDE</display-name>

    <!-- Processes application requests -->
    <servlet>
        <servlet-name>dispatcherServlet</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <init-param>
            <param-name>contextClass</param-name>
            <param-value>org.springframework.web.context.support.AnnotationConfigWebApplicationContext</param-value>
        </init-param>
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>name.zemon.david.propwareide.server.build.config.MvcConfig</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>dispatcherServlet</servlet-name>
        <url-pattern>/jas/*</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>cores-filter</filter-name>
        <filter-class>name.zemon.david.propwareide.common.controller.SimpleCORSFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>cores-filter</filter-name>
        <servlet-name>dispatcherServlet</servlet-name>
    </filter-mapping>
</web-app>
